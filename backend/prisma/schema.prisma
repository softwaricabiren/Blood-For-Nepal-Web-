// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  phone       String?
  bloodGroup  String?
  province    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Volunteer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  location  String?
  createdAt DateTime @default(now())
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
